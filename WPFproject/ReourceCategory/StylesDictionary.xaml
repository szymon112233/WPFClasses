                    xmlns:local="clr-namespace:DatabaseWPF.ReourceCategory">

    <Style TargetType="Button" x:Key="MainMenuButtonStyle">
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush>
                    <GradientStop Color="#FF06A64F" Offset="0.385"/>
